# Application Environment
APP_ENV=testing
APP_DEBUG=true
APP_KEY=

# Database Configuration
# Default: SQLite (no setup required for testing)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# MySQL Configuration (Optional - for MySQL testing)
# Uncomment and configure if you want to test with MySQL
# DB_CONNECTION=mysql
